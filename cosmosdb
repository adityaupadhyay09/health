# cosmos_db_utils.py
from azure.cosmos import CosmosClient, PartitionKey

def insert_data_into_cosmos_db(cosmos_db_endpoint, cosmos_db_key, database_id, container_id, data):
    # Initialize Cosmos DB client
    client = CosmosClient(cosmos_db_endpoint, cosmos_db_key)

    # Create a reference to your database and container
    database = client.get_database_client(database_id)
    container = database.get_container_client(container_id)

    # Insert the data into the Cosmos DB container
    container.create_item(item=data)

    print("Data inserted successfully.")
